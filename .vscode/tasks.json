{
    "version": "2.0.0",
    "tasks": [
        // ----------------------------------------------------------------------------------------
        // #region: Build tasks
        {
            "label": "Build",
            "type": "cargo",
            "command": "build",
            "args": [ "--target", "x86_64-pc-windows-gnu" ],
            "problemMatcher": [ "$rustc" ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // #endregion Build tasks
        // ----------------------------------------------------------------------------------------

        // ----------------------------------------------------------------------------------------
        // #region: Test tasks
        {
            "label": "Test",
            "type": "cargo",
            "command": "nextest",
            "args": [ "run", "--no-fail-fast" ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
        // #endregion Test tasks
        // ----------------------------------------------------------------------------------------
    ]
}
